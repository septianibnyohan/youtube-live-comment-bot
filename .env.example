# Application Settings
APP_NAME=YouTube Live Comment Bot
APP_VERSION=1.0.0
APP_ENV=development  # development, production, testing
DEBUG=True
LOG_LEVEL=INFO      # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Browser Settings
DEFAULT_BROWSER=chrome  # chrome, firefox, edge
BROWSER_HEADLESS=False
BROWSER_TIMEOUT=30
MAX_BROWSER_INSTANCES=3
BROWSER_DATA_DIR=./browser_data
USER_AGENT_ROTATION=True
FINGERPRINT_ENABLED=True

# Proxy Settings
PROXY_ENABLED=True
PROXY_TYPE=http     # http, socks4, socks5
PROXY_HOST=proxy.example.com
PROXY_PORT=8080
PROXY_USERNAME=proxy_user
PROXY_PASSWORD=proxy_pass
PROXY_ROTATION_INTERVAL=300  # seconds
MIN_PROXY_SCORE=70
CHECK_RESIDENTIAL=True

# YouTube Settings
YOUTUBE_API_KEY=your_api_key_here
MAX_COMMENTS_PER_USER=5
COMMENT_INTERVAL=5  # seconds
WATCH_DURATION_MIN=30  # seconds
WATCH_DURATION_MAX=300  # seconds
LIKE_VIDEOS=True
SUBSCRIBE_CHANNELS=True
AUTO_PLAY=True
CLEAR_WATCH_HISTORY=True

# Security Settings
ENABLE_IP_CHECK=True
BLOCK_DOUBLE_IP=True
CHECK_TIMEZONE=True
WHOER_MIN_SCORE=70
AD_BLOCK_ENABLED=True
RESIDENTIAL_IP_CHECK=True

# Database Settings
DB_TYPE=sqlite      # sqlite, mysql, postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=youtube_bot
DB_USER=db_user
DB_PASSWORD=db_password

# Redis Settings (for caching)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Logging Settings
LOG_FILE=bot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1 day
LOG_RETENTION=30 days
ENABLE_CONSOLE_LOG=True

# Storage Settings
DATA_DIR=./data
CONFIG_DIR=./config
RESOURCE_DIR=./resources
TEMP_DIR=./temp

# Email Notifications
SMTP_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=notify@example.com

# Schedule Settings
ENABLE_SCHEDULER=True
SCHEDULE_TIMEZONE=UTC
DEFAULT_SCHEDULE_INTERVAL=30  # minutes
RETRY_ATTEMPTS=3
RETRY_DELAY=5  # seconds

# Performance Settings
THREAD_POOL_SIZE=4
MAX_CONCURRENT_TASKS=2
MEMORY_LIMIT=512  # MB
CPU_LIMIT=50      # percentage

# Feature Flags
ENABLE_HUMAN_EMULATION=True
ENABLE_PROXY_ROTATION=True
ENABLE_USER_AGENT_ROTATION=True
ENABLE_IP_VERIFICATION=True
ENABLE_ERROR_REPORTING=True

# API Settings
API_VERSION=v1
API_TIMEOUT=30
API_RATE_LIMIT=100
API_RETRY_ATTEMPTS=3

# Custom Settings
CUSTOM_COMMENT_TEMPLATES_DIR=./templates/comments
CUSTOM_USER_AGENTS_FILE=./config/user_agents.txt
CUSTOM_PROXY_LIST_FILE=./config/proxy_list.txt

# Development Settings
# Remove or comment out in production
DEV_TOOLS_ENABLED=True
MOCK_YOUTUBE_API=False
STUB_PROXY_CHECKS=False
DISABLE_SECURITY_CHECKS=False